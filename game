import pygame
import time
import math

WIDTH, HEIGHT = 1920, 1080

TITLE_WIDTH, TITLE_HEIGHT = 683, 224

PLAYER_WIDTH, PLAYER_HEIGHT = 200, 200
PLAYER_VEL = 5

START_BUTTON_WIDTH, START_BUTTON_HEIGHT = 1706, 130

window = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption('Unnamed Game')

background = pygame.transform.scale(pygame.image.load('game_background.png').convert_alpha(), (WIDTH, HEIGHT))

def draw_before_title(background, sine_sprites):
    window.blit(background, (0,0))
    sine_sprites.draw(window)

    pygame.display.flip()
    pygame.display.update()

def draw_after_title(background, player):
    window.blit(background, (0,0))
    window.blit(player.image, player.rect)

    pygame.display.update()

def main():

    class PLAYER(pygame.sprite.Sprite):
        def __init__(self):
            super().__init__()
            self.image = pygame.transform.scale(pygame.image.load('goose.png').convert_alpha(), (PLAYER_WIDTH, PLAYER_HEIGHT))
            self.rect = self.image.get_rect()
            self.rect.x = WIDTH / 2 - PLAYER_WIDTH / 2
            self.rect.y = 600

    class TITLE(pygame.sprite.Sprite):
        def __init__(self):
            super().__init__()
            self.image = pygame.transform.scale(pygame.image.load('game_title.png').convert_alpha(), (TITLE_WIDTH, TITLE_HEIGHT))
            self.rect = self.image.get_rect()
            self.rect.x = WIDTH / 2 - TITLE_WIDTH / 2
            self.x_value = 0

        def update(self):
            self.x_value += 0.1
            self.rect.y = 150 + 10 * math.sin(self.x_value)

    class START_BUTTON(pygame.sprite.Sprite):
        def __init__(self):
            super().__init__()
            self.image = pygame.transform.scale(pygame.image.load('press-space-to-start.png').convert_alpha(), (START_BUTTON_WIDTH / 4, START_BUTTON_HEIGHT / 4))
            self.rect = self.image.get_rect()
            self.rect.x = (WIDTH / 2) - ((START_BUTTON_WIDTH / 4) / 2)
            self.x_value = 0

        def update(self):
            self.x_value += 0.1
            self.rect.y = 650 + 5 * math.sin(self.x_value)

    player = PLAYER()
    title = TITLE()
    start_button = START_BUTTON()
    sine_sprites = pygame.sprite.Group(title, start_button)

    running = True
    in_game = False

    clock = pygame.time.Clock()

    while running:
        clock.tick(60)

        keys = pygame.key.get_pressed()

        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False 
            
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_SPACE:
                    in_game = True
                break
        
        sine_sprites.update()

        if keys[pygame.K_w] and player.rect.y > 0 and in_game == True:
            player.rect.y -= PLAYER_VEL
        if keys[pygame.K_s] and player.rect.y + PLAYER_HEIGHT < HEIGHT and in_game == True:
            player.rect.y += PLAYER_VEL
        if keys[pygame.K_a] and player.rect.x > 0 and in_game == True:
            player.rect.x -= PLAYER_VEL
        if keys[pygame.K_d] and player.rect.x + PLAYER_WIDTH < WIDTH and in_game == True:
            player.rect.x += PLAYER_VEL
        if keys[pygame.K_ESCAPE]:
            running = False

        if in_game == True:
            draw_after_title(background, player)
        if in_game == False:
            draw_before_title(background, sine_sprites)
    pygame.quit()

main()

